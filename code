using System;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Database database = new Database();
            Player player = new Player(0, null, 0, false);
            bool isWorking = true;
            ConsoleKeyInfo key;

            while (isWorking)
            {
                Console.WriteLine("Введите команду");
                Console.WriteLine($"Создать игрока - Q");
                Console.WriteLine($"Забанить игрока - W");
                Console.WriteLine($"Разбанить игрока - E");
                Console.WriteLine($"удалить игрока - R");
                Console.WriteLine($"Показать всех игроков - T");
                key = Console.ReadKey(true);

                if (key.Key == ConsoleKey.Q)
                {
                    database.AddNewPlayer();
                }
                else if (key.Key == ConsoleKey.W)
                {
                    player.Ban(database);
                }
                else if (key.Key == ConsoleKey.E)
                {
                    player.Unban(database);
                }
                else if (key.Key == ConsoleKey.R)
                {
                    database.RemovePlayer();
                }
                else if (key.Key == ConsoleKey.T)
                {
                    database.ShowAllPlayers();
                }
                else
                {
                    Console.WriteLine("Неизвестная команда");
                }
            }
        }
    }

    class Player
    {       
        public Player(int id, string name, int level, bool isBanned)
        {
            Id = id;
            Name = name;
            Level = level;
            IsBanned = isBanned;
        }

        public int Id { get; private set; }
        public string Name { get; private set; }
        public int Level { get; private set; }
        public bool IsBanned { get; private set; }

        public Database Ban(Database database)
        {
            
            string userInput;
            int tempNumber = 0;

            Console.WriteLine("Введите ID игрока");

            userInput = Console.ReadLine();

            for (int i = 0; i < database.Players.Count; i++)
            {
                if (database.Players[i].Id == Convert.ToInt32(userInput) && database.Players[i].IsBanned == false)
                {
                    tempNumber = database.Players[i].Id;
                    break;
                }
            }

            if (database.Players != null)
            {
                database.Players[tempNumber].IsBanned = true;
                Console.WriteLine($"Игрок {database.Players[tempNumber].Name} забанен!");
            }
            else
            {
                Console.WriteLine("Не удалось никого забанить:(");
            }
            return database;
        }

        public Database Unban(Database database)
        {
            string userInput;
            int tempNumber = 0;

            Console.WriteLine("Введите ID игрока");

            userInput = Console.ReadLine();

            for (int i = 0; i < database.Players.Count; i++)
            {
                if (Convert.ToString(database.Players[i].Id) == userInput && database.Players[i].IsBanned == true)
                {
                    tempNumber = database.Players[i].Id;
                    break;
                }
            }

            if (database.Players != null)
            {
                database.Players[tempNumber].IsBanned = false;
                Console.WriteLine($"Игрок {database.Players[tempNumber].Name} разбанен!");
            }
            else
            {
                Console.WriteLine("Не получается никого разбанить:(");
            }
            return database;
        }

        public void ShowInfo(int id, string name, int level, bool banFlag)
        {
            Console.WriteLine("ID игрока: " + id);
            Console.WriteLine("Имя игрока: " + name);
            Console.WriteLine("Уровень игрока: " + level);
            if (banFlag == false)
            {
                Console.WriteLine("забанен ли игрок: нет");
            }
            else
            {
                Console.WriteLine("забанен ли игрок: да");
            }
        }
    }

    class Database
    {
        public List<Player> Players { get; private set; } = new List<Player>();
        public Player Player { get; private set; } = new Player(0, null, 0, false);
        public int IdNumber { get; private set; } = 0;

        public List<Player> AddNewPlayer()
        {
            string userInput;

            Console.WriteLine("Введите имя игроку");
            userInput = Console.ReadLine();

            Player player = new Player(IdNumber, userInput, 0, false);

            Players.Add(player);

            Console.WriteLine($"Игрок {player.Name} добавлен");
            IdNumber++;

            return Players;
        }
        
        public void ShowAllPlayers()
        {
            for (int i = 0; i < Players.Count; i++)
            {
                Players[i].ShowInfo(Players[i].Id, Players[i].Name, Players[i].Level, Players[i].IsBanned);
            }
        }       

        public List<Player> RemovePlayer()
        {
            string userInput;

            Console.WriteLine("Введите ID игрока");
            userInput = Console.ReadLine();

            for (int i = 0; i < Players.Count; i++)
            {
                if (Convert.ToString(Players[i].Id) == userInput)
                {
                    Console.WriteLine($"Игрок {Players[i].Name} удалён!");
                    Players.Remove(Players[i]);
                }
            }

            return Players;
        }
    }
}
