using System;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Database database = new Database();
            bool isWorking = true;
            ConsoleKeyInfo key;
            ConsoleKey keyQ = ConsoleKey.Q;
            ConsoleKey keyW = ConsoleKey.W;
            ConsoleKey keyE = ConsoleKey.E;
            ConsoleKey keyR = ConsoleKey.R;
            ConsoleKey keyT = ConsoleKey.T;

            while (isWorking)
            {
                Console.WriteLine("Введите команду");
                Console.WriteLine($"Создать игрока - Q");
                Console.WriteLine($"Забанить игрока - W");
                Console.WriteLine($"Разбанить игрока - E");
                Console.WriteLine($"удалить игрока - R");
                Console.WriteLine($"Показать всех игроков - T");
                key = Console.ReadKey(true);

                if (key.Key == keyQ)
                {
                    database.AddNewPlayer();
                }
                else if (key.Key == keyW)
                {
                    database.BanPlayer();
                }
                else if (key.Key == keyE)
                {
                    database.UnbanPlayer();
                }
                else if (key.Key == keyR)
                {
                    database.RemovePlayer();
                }
                else if (key.Key == keyT)
                {
                    database.ShowAllPlayers();
                }
                else
                {
                    Console.WriteLine("Неизвестная команда");
                }
            }
        }
    }

    class Player
    {
        public Player(int id, string name, int level, bool isBanned)
        {
            Id = id;
            Name = name;
            Level = level;
            IsBanned = isBanned;
        }

        public int Id { get; private set; }
        public string Name { get; private set; }
        public int Level { get; private set; }
        public bool IsBanned { get; private set; }

        public void ShowInfo()
        {
            Console.WriteLine("ID игрока: " + Id);
            Console.WriteLine("Имя игрока: " + Name);
            Console.WriteLine("Уровень игрока: " + Level);

            if (IsBanned == false)
            {
                Console.WriteLine("забанен ли игрок: нет");
            }
            else
            {
                Console.WriteLine("забанен ли игрок: да");
            }
        }

        public void Ban()
        {
            IsBanned = true;
        }

        public void Unban()
        {
            IsBanned = false;
        }
    }

    class Database
    {
        public void BanPlayer()
        {
            string userInput = null;
            int tempNumber = 0;

            if (TryGetPlayer(out _player, userInput, tempNumber))
            {
                _players[tempNumber].Ban();
                Console.WriteLine($"Игрок {_players[tempNumber].Name} забанен!");
            }
            else
            {
                Console.WriteLine("Не удалось никого забанить:(");
            }
        }

        public void UnbanPlayer()
        {
            string userInput = null;
            int tempNumber = 0;

            if (TryGetPlayer(out _player, userInput, tempNumber))
            {
                _players[tempNumber].Unban();
                Console.WriteLine($"Игрок {_players[tempNumber].Name} разбанен!");
            }
            else
            {
                Console.WriteLine("Не получается никого разбанить:(");
            }
        }

        public void AddNewPlayer()
        {
            string userInput;

            Console.WriteLine("Введите имя игроку");
            userInput = Console.ReadLine();

            Player player = new Player(_IdNumber, userInput, 0, false);

            _players.Add(player);

            Console.WriteLine($"Игрок {player.Name} добавлен");
            _IdNumber++;
        }

        public void ShowAllPlayers()
        {
            for (int i = 0; i < _players.Count; i++)
            {
                _players[i].ShowInfo();
            }
        }

        public void RemovePlayer()
        {
            string userInput = null;
            int tempNumber = 0;

            if (TryGetPlayer(out _player, userInput, tempNumber))
            {
                Console.WriteLine($"Игрок {_players[tempNumber].Name} удалён!");
                _players.Remove(_players[tempNumber]);
            }
            else
            {
                Console.WriteLine("Ошибка ввода!");
            }
        }

        private List<Player> _players = new List<Player>();
        private int _IdNumber = 0;
        private Player _player = new Player(0, null, 0, false);

        private bool TryGetPlayer(out Player player, string userInput, int tempNumber)
        {
            player = null;
            bool isFound = false;
            Console.WriteLine("Введите ID игрока");
            int value;

            userInput = Console.ReadLine();

            int.TryParse(userInput, out value);

            for (int i = 0; i < _players.Count; i++)
            {
                if (_players[i].Id == value)
                {
                    isFound = true;
                    tempNumber = _players[i].Id;
                    player = _players[i];
                    break;
                }
            }

            return isFound;
        }
    }
}
